@rendermode @(new InteractiveServerRenderMode(prerender: false))

<div class="container my-3">
    @if (_isLoading)
{
    <p><em>Loading data...</em></p>
}
else
{
        <h4 class="mb-3">Yoga Classes</h4>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th/>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var yogaClass in YogaClassesList)
                    {
                        <tr>
                            <td>@yogaClass.Name</td>
                            <td>@yogaClass.Description</td>
                            <td>
                                <button class="btn btn-outline-primary btn-sm" @onclick="@(() => OnYogaClassSelected(yogaClass, false))" aria-label="View @yogaClass.Name">
                                    View Class Attendance
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <button class="btn btn-outline-primary btn-sm" @onclick="@(() => OnYogaClassSelected(null, false))">
        Show All Attendance
    </button>

    <button class="btn btn-outline-primary btn-sm" @onclick="@(() => OnYogaClassSelected(null, true))">
        Virtualize All Attendance
    </button>
    <hr class="my-4" />

    <h4 class="mb-3">Attendance Records (@YogaClassAttendanceRecordList.Count)</h4>

    @if (YogaClassAttendanceRecordList?.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Class</th>
                        <th scope="col">Date</th>
                        <th scope="col">Attendee Count</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
        @if (_virtualize)
        {
            <Virtualize ItemsProvider="LoadYogaClassAttendanceRecordsAsync" ItemSize="_itemHieght">
                <ItemContent>
                    <tr>
                        <td>@context.YogaClassId</td>
                        <td>@context.AttendanceDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@context.AttendeeCount</td>
                        <td></td>
                    </tr>
                </ItemContent>
                <Placeholder>
                    <tr>
                        <td colspan="3">Loading...</td>
                     </tr>
                </Placeholder>
            </Virtualize>
        }else
        {
            @foreach (var record in YogaClassAttendanceRecordList)
            {
                <tr>
                    <td>@record.YogaClassId</td>
                    <td>@record.AttendanceDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@record.AttendeeCount</td>
                    <td><a href="@($"attendanceEditForm/{record.Id}")" class="btn btn-outline-primary btm-sm mb-1">Edit</a></td>
                </tr>
            }         
        }
            </tbody>
        </table>
    </div>
 
       
    }
</div>



